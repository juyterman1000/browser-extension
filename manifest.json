{
  "manifest_version": 3,
  "name": "FlowState - ADHD Companion",
  "version": "1.0.0",
  "description": "An innovative ADHD-friendly browser extension that works with your brain patterns, not against them.",
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "background"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FlowState - ADHD Companion",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "blocked.css", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
